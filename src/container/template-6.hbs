<header class="page_block">
	<div class="header">
		<div class="">
			{{>logo}}
		</div>

		<nav class="header_nav">
			<div class="header_nav_right">
				{{>nav list=header}}
			</div>
		</nav>
	</div>
</header>

<main class="main">
	{{#with info}}
		<div class="info">
			<h1 class="info_title">{{title}}</h1>
			<p class="info_description">{{description}}</p>
		</div>
	{{/with}}

	{{#with form}}	
		<form class="form">
			<div class="form_logo"></div>
			<div class="form_input_list">
				{{#each inputs}}
					<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form_input-{{id}}">
				{{/each}}
			</div>

			<div class="form_checkbox">
				<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
				<div></div>
				<label for="{{checkbox.name}}">{{checkbox.label}}</label>
			</div>
			<button type="submit" class="form_button">{{button}}</button>
			<div class="form_line"></div>
			<p class="form_info">{{info}}</hp>
		</form>
	{{/with}}
</main>	

<div class="updates">
	{{#with updates}}
		<div class="updates_title">{{title}}</div>
		{{#each list}}
			<div class="updates_list">
				<div class="user_icon"></div>
				<div class="updates_list_items">
					
					<strong>{{nickname}}</strong>
					<p>{{description}}</p>
				</div>
			</div>
		{{/each}}
		{{#with show_all}}
			<a href="{{url}}" class="messages_link">{{text}}</a>
		{{/with}}
	{{/with}}
</div>

<div class="expirience">
	{{#with expirience}}
		<div class="expirience_title">{{title}}</div>
		<div class="expirience_badge">{{badge}}</div>
		<div class="expirience_list">
			{{#each list}}	
				<div >
					<div class="expirience_list_items">
						<strong>{{name}}</strong>
						<p>{{details}}</p>
					</div>
				</div>
			{{/each}}
		</div>
	{{/with}}
</div>
	
<footer class="footer">
	<div class="">
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>
	</div>
	{{#each footer}}
		<div class="">
			<span class="footer_title">{{title}}</span>
			{{>nav list=links isVertical=true}}
		</div>
	{{/each}}
</footer>

